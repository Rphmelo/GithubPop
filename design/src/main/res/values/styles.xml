<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/bgBar</item>
    </style>

    <style name="H1" parent="FontStyleBlack">
        <item name="android:textSize">@dimen/font_thirty_two</item>
    </style>

    <style name="H2" parent="FontStyleBlack">
        <item name="android:textSize">@dimen/font_twenty_six</item>
    </style>

    <style name="H3" parent="FontStyleBold">
        <item name="android:textSize">@dimen/font_twenty</item>
    </style>

    <style name="SubHeading" parent="FontStyleBold">
        <item name="android:textSize">@dimen/font_sixteen</item>
    </style>

    <style name="Label" parent="FontStyleMedium">
        <item name="android:textSize">@dimen/font_sixteen</item>
    </style>

    <style name="Body" parent="FontStyle">
        <item name="android:textSize">@dimen/font_sixteen</item>
    </style>

    <style name="Placeholder" parent="FontStyle">
        <item name="android:textSize">@dimen/font_sixteen</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Caption" parent="FontStyle">
        <item name="android:textSize">@dimen/font_fourteen</item>
    </style>

    <style name="CaptionSecondary" parent="Caption">
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="LinkMedium" parent="FontStyleBold">
        <item name="android:textSize">@dimen/font_sixteen</item>
    </style>

    <style name="LinkSmall" parent="FontStyleBold">
        <item name="android:textSize">@dimen/font_fourteen</item>
    </style>

    <style name="FontStyle">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="FontStyleBlack">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="FontStyleBold">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontStyleMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>